<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Input dan Tombol untuk Cek Status Kursi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Status Kursi"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSeatRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Baris Kursi"
        android:inputType="number" />

    <EditText
        android:id="@+id/etSeatCol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Kolom Kursi"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCheckSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Status Kursi" />

    <TextView
        android:id="@+id/tvSeatStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Kursi: "
        android:textSize="16sp" />

    <!-- Input dan Tombol untuk Menghitung Total Harga -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Total Harga"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etPricePerTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga per Tiket"
        android:inputType="number" />

    <EditText
        android:id="@+id/etNumberOfTickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Tiket"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCalculatePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Total Harga" />

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga: "
        android:textSize="16sp" />

    <!-- Tombol dan Hasil untuk Menghitung Faktorial -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Faktorial"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etFactorialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Angka"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCalculateFactorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Faktorial" />

    <TextView
        android:id="@+id/tvFactorialResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Faktorial: "
        android:textSize="16sp" />

    <!-- Input dan Tombol untuk Mencari Kursi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Kursi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etSearchSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nomor Kursi"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSearchSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Kursi" />

    <TextView
        android:id="@+id/tvSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Pencarian: "
        android:textSize="16sp" />

    <!-- Tombol dan Hasil untuk Mengurutkan Kursi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urutkan Kursi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSortSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urutkan Kursi" />

    <TextView
        android:id="@+id/tvSortedSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kursi Terurut: "
        android:textSize="16sp" />
</LinearLayout>